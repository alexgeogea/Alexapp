<div class="container">
<div class="row">
	<div class="col-md-6">
		<p id="tagline">Share ideas with your friends, find collaborators and make your ideas become reality!
		</p>
		<div class="image-box">
			<div class="image-1 col-md-3"></div>
			<div class="image-2 col-md-3"></div>
		</div>
	</div>
	<div class="col-md-6">
		<div class="custom-form-box">
			<h2>Sign in</h2>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
			  <div class="form-inputs">
			  	<%= f.input :name, required: false, autofocus: true, placeholder: 'Name' %>
			    <%= f.input :email, required: false, autofocus: true, placeholder: 'Email' %>
			    <%= f.input :password, required: false, placeholder: 'Password' %>
			    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Sign in" %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>